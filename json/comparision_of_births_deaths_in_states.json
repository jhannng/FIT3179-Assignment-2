{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 860,
    "height": 500,
    "params": [
        {
            "name": "YearFilter",
            "value": 2022,
            "bind": {
                "input": "range",
                "min": 2012,
                "max": 2022,
                "step": 1,
                "name": "Year Selection: ",
                "element": "#yearFilter2"
            }
        }
    ],
    "data": {
        "url": "https://raw.githubusercontent.com/jhannng/FIT3179-Assignment-2/refs/heads/main/data/comparision_of_births_deaths_in_states.csv"
    },
    "transform": [
        { "calculate": "datum.NumberOfDeath * -1", "as": "NegativeDeaths" },
        { "filter": "datum.Year == YearFilter" }
    ],
    "encoding": {
        "y": {
            "field": "State",
            "type": "nominal",
            "axis": {
                "title": "State",
                "titlePadding": 10
            }
        },
        "tooltip": [
            { "field": "State", "type": "nominal" },
            { "field": "Year", "type": "quantitative", "title": "Year" },
            { "field": "NumberOfBirth", "type": "quantitative", "title": "Number of Births", "format": ",.0f" },
            { "field": "NumberOfDeath", "type": "quantitative", "title": "Number of Deaths", "format": ",.0f" }
        ]
    },
    "layer": [
        {
            "mark": "bar",
            "encoding": {
                "x": {
                    "field": "NumberOfBirth",
                    "type": "quantitative",
                    "axis": {
                        "title": "Number of People",
                        "orient": "top",
                        "titleAnchor": "middle",
                        "titleAlign": "center",
                        "titlePadding": 20
                    },
                    "scale": { "domain": [ 0, 110000 ] }
                },
                "color": { "value": "#4CAF50" }

            }
        },
        {
            "mark": {
                "type": "text",
                "align": "center",
                "baseline": "top",
                "dy": 10
            },
            "encoding": {
                "text": { "value": "Births" },
                "x": { "value": 650 },
                "y": { "value": 510 }
            }
        },
        {
            "mark": "bar",
            "encoding": {
                "x": {
                    "field": "NegativeDeaths",
                    "type": "quantitative",
                    "scale": { "domain": [ -110000, 0 ] }
                },
                "color": { "value": "#2196F3" }
            }
        },
        {
            "mark": {
                "type": "text",
                "align": "center",
                "baseline": "top",
                "dy": 10
            },
            "encoding": {
                "text": { "value": "Deaths" },
                "x": { "value": 200 },
                "y": { "value": 510 }
            }
        },
        {
            "mark": "rule",
            "encoding": {
                "x": { "value": 0 },
                "color": { "value": "black" },
                "size": { "value": 1 }
            }
        },
        {
            "mark": {
                "type": "text",
                "align": "center",
                "baseline": "top",
                "dx": 5,
                "dy": 10,
                "fontSize": 12,
                "fontStyle": "italic"
            },
            "encoding": {
                "text": { "value": "Highest Number of Births & Deaths" },
                "x": { "value": 140 },
                "y": { "value": 342 }
            }
        },
        {
            "mark": {
                "type": "text",
                "align": "center",
                "baseline": "top",
                "dx": 5,
                "dy": 10,
                "fontSize": 12,
                "fontStyle": "italic"
            },
            "encoding": {
                "text": { "value": "Putrajaya & Labuan have the Lowest Numbers" },
                "x": { "value": 680 },
                "y": { "value": 455 }
            }
        }
    ],
    "config": {
        "view": { "stroke": null },
        "axis": { "grid": false }
    }
}