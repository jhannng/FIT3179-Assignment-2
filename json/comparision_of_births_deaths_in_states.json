{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 860,
    "height": 500,
    "params": [
        {
            "name": "YearFilter",
            "value": 2022,
            "bind": {
                "input": "range",
                "min": 2012,
                "max": 2022,
                "step": 1,
                "name": "Year Selection: "
            }
        },
        {
            "name": "StateFilter",
            "value": "All",
            "bind": {
                "input": "select",
                "options": [ "All", "Johor", "Kedah", "Kelantan", "Melaka", "Negeri Sembilan", "Pahang", "Perak", "Perlis", "Pulau Pinang",
                    "Sabah", "Sarawak", "Selangor", "Terengganu", "W.P. Kuala Lumpur", "W.P. Labuan", "W.P. Putrajaya" ],
                "labels": [ "All State", "Johor", "Kedah", "Kelantan", "Melaka", "Negeri Sembilan", "Pahang", "Perak", "Perlis", "Pulau Pinang",
                    "Sabah", "Sarawak", "Selangor", "Terengganu", "W.P. Kuala Lumpur", "W.P. Labuan", "W.P. Putrajaya" ],
                "name": "State Selection: "
            }
        }
    ],
    "data": {
        "url": "../data/comparision_of_births_deaths_in_states.csv"
    },
    "transform": [
        { "calculate": "datum.NumberOfDeath * -1", "as": "NegativeDeaths" },
        { "filter": "datum.Year == YearFilter" },
        { "filter": "StateFilter == 'All' || datum.State == StateFilter" }
    ],
    "encoding": {
        "y": {
            "field": "State",
            "type": "nominal",
            "axis": {
                "title": "State",
                "titlePadding": 10
            }
        },
        "tooltip": [
            { "field": "State", "type": "nominal" },
            { "field": "Year", "type": "quantitative", "title": "Year" },
            { "field": "NumberOfBirth", "type": "quantitative", "title": "Number of Births", "format": ",.0f" },
            { "field": "NumberOfDeath", "type": "quantitative", "title": "Number of Deaths", "format": ",.0f" }
        ]
    },
    "layer": [
        {
            "mark": "bar",
            "encoding": {
                "x": {
                    "field": "NumberOfBirth",
                    "type": "quantitative",
                    "axis": {
                        "title": "Number of People",
                        "orient": "top",
                        "titleAnchor": "middle",
                        "titleAlign": "center",
                        "titlePadding": 20
                    },
                    "scale": { "domain": [ 0, 80000 ] }
                },
                "color": { "value": "#4CAF50" }

            }
        },
        {
            "mark": {
                "type": "text",
                "align": "center",
                "baseline": "top",
                "dy": 10
            },
            "encoding": {
                "text": { "value": "Births" },
                "x": { "value": 750 },
                "y": { "value": 510 }
            }
        },
        {
            "mark": "bar",
            "encoding": {
                "x": {
                    "field": "NegativeDeaths",
                    "type": "quantitative",
                    "scale": { "domain": [ -80000, 0 ] }
                },
                "color": { "value": "#2196F3" }
            }
        },
        {
            "mark": {
                "type": "text",
                "align": "center",
                "baseline": "top",
                "dy": 10
            },
            "encoding": {
                "text": { "value": "Deaths" },
                "x": { "value": 250 },
                "y": { "value": 510 }
            }
        },
        {
            "mark": "rule",
            "encoding": {
                "x": { "value": 0 },
                "color": { "value": "black" },
                "size": { "value": 1 }
            }
        }
    ],
    "config": {
        "view": { "stroke": null },
        "axis": { "grid": false }
    }
}