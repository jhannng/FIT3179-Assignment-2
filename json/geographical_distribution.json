{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 500,
    "height": 500,
    "layer": [
        {
            "mark": {
                "type": "geoshape",
                "fill": "lightblue"
            },
            "data": {
                "sphere": true
            },
            "projection": {
                "type": "mercator",
                "scale": 1500,
                "center": [ 110, 3.5 ],
                "clipAngle": 90
            }
        },
        {
            "mark": {
                "type": "geoshape",
                "stroke": "gray",
                "strokeWidth": 0.3
            },
            "data": {
                "graticule": true
            },
            "projection": {
                "type": "mercator",
                "scale": 350,
                "center": [ 110, 3.5 ]
            }
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/jhannng/FIT3179-Assignment-2/refs/heads/main/data/geographical_distribution_of_births_deaths.csv"
            },
            "transform": [
                {
                    "lookup": "State",
                    "from": {
                        "data": {
                            "url": "https://raw.githubusercontent.com/jhannng/FIT3179-Assignment-2/refs/heads/main/malaysia-states.topojson",
                            "format": {
                                "type": "topojson",
                                "feature": "states"
                            }
                        },
                        "key": "properties.Name"
                    },
                    "as": "geo"
                }
            ],
            "projection": {
                "type": "mercator",
                "center": [ 110, 3.5 ]
            },
            "mark": {
                "type": "geoshape",
                "stroke": "white",
                "strokeWidth": 0.5
            },
            "encoding": {
                "shape": {
                    "field": "geo",
                    "type": "geojson"
                },
                "color": {
                    "field": "NetChange",
                    "type": "quantitative",
                    "scale": {
                        "type": "linear",
                        "scheme": "reds"
                    },
                    "legend": {
                        "title": "Net Change"
                    }
                },
                "tooltip": [
                    { "field": "State", "type": "nominal", "title": "State: " },
                    { "field": "NumberOfBirth", "type": "quantitative", "title": "Number of Births: ", "format": ",.0f" },
                    { "field": "NumberOfDeath", "type": "quantitative", "title": "Number of Deaths: ", "format": ",.0f" },
                    { "field": "NetChange", "type": "quantitative", "title": "Net Change: ", "format": ",.0f" }
                ]
            }
        }
    ]
}
