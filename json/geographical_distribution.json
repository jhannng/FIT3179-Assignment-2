{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 500,
    "height": 500,
    "layer": [
        {
            "mark": {
                "type": "geoshape",
                "fill": "lightblue"
            },
            "data": {
                "sphere": true
            },
            "projection": {
                "type": "mercator",
                "scale": 1500,
                "center": [ 110, 3.5 ],
                "clipAngle": 90
            }
        },
        {
            "mark": {
                "type": "geoshape",
                "stroke": "gray",
                "strokeWidth": 0.3
            },
            "data": {
                "graticule": true
            },
            "projection": {
                "type": "mercator",
                "scale": 350,
                "center": [ 110, 3.5 ]
            }
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/jhannng/FIT3179-Assignment-2/refs/heads/main/malaysia-states.topojson",
                "format": {
                    "type": "topojson",
                    "feature": "states"
                }
            },
            "transform": [
                {
                    "lookup": "properties.Name",
                    "from": {
                        "data": {
                            "url": "https://raw.githubusercontent.com/jhannng/FIT3179-Assignment-2/refs/heads/main/data/combined_birth_death_dataset.csv"
                        },
                        "key": "State",
                        "fields": [ "Sex", "Ethnicity", "Population", "Event_Type" ]
                    }
                },
                {
                    "filter": {
                        "and": [
                            { "field": "Sex", "equal": "Both" },
                            { "field": "Ethnicity", "equal": "Overall" }
                        ]
                    }
                },
                {
                    "pivot": "Event_Type",
                    "value": "Population",
                    "groupby": [ "State" ]
                }
            ],
            "projection": {
                "type": "mercator",
                "center": [ 110, 3.5 ]
            },
            "mark": {
                "type": "geoshape",
                "stroke": "white",
                "strokeWidth": 0.5
            },
            "encoding": {
                "color": {
                    "field": "Total",
                    "type": "quantitative",
                    "scale": {
                        "type": "log",
                        "scheme": "reds"
                    },
                    "legend": {
                        "title": "Total Population"
                    }
                },
                "tooltip": [
                    { "field": "properties.Name", "type": "nominal", "title": "State" },
                    { "field": "Total", "type": "quantitative", "title": "Total Population" },
                    { "field": "Birth", "type": "quantitative", "title": "Births" },
                    { "field": "Death", "type": "quantitative", "title": "Deaths" }
                ]
            }
        }
    ]
}