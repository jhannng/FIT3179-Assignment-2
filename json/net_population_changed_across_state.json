{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 700,
    "height": 500,
    "params": [
        {
            "name": "year_selected",
            "value": 2022,
            "bind": {
                "input": "range",
                "min": 2012,
                "max": 2022,
                "step": 1,
                "name": "Year: "
            }
        }
    ],
    "layer": [
        {
            "mark": {
                "type": "geoshape",
                "fill": "lightblue"
            },
            "data": {
                "sphere": true
            },
            "projection": {
                "type": "mercator",
                "scale": 1500,
                "center": [ 110, 3.5 ],
                "clipAngle": 90
            }
        },
        {
            "mark": {
                "type": "geoshape",
                "stroke": "gray",
                "strokeWidth": 0.3
            },
            "data": {
                "graticule": true
            },
            "projection": {
                "type": "mercator",
                "scale": 350,
                "center": [ 110, 3.5 ]
            }
        },
        {
            "data": {
                "url": "../data/net_population_changed_across_state.csv"
            },
            "transform": [
                {
                    "lookup": "State",
                    "from": {
                        "data": {
                            "url": "https://raw.githubusercontent.com/jhannng/FIT3179-Assignment-2/refs/heads/main/malaysia-states.topojson",
                            "format": {
                                "type": "topojson",
                                "feature": "states"
                            }
                        },
                        "key": "properties.Name"
                    },
                    "as": "geo"
                },
                {
                    "calculate": "timeParse(datum.Date, '%Y-%m-%d')",
                    "as": "ParsedDate"
                },
                {
                    "filter": {
                        "field": "ParsedDate",
                        "timeUnit": "year",
                        "equal": { "expr": "year(datum.ParsedDate) == year_selected" }
                    }
                }
            ],
            "projection": {
                "type": "mercator",
                "center": [ 110, 3.5 ]
            },
            "mark": {
                "type": "geoshape",
                "stroke": "white",
                "strokeWidth": 0.5
            },
            "encoding": {
                "shape": {
                    "field": "geo",
                    "type": "geojson"
                },
                "color": {
                    "field": "NetChange",
                    "type": "quantitative",
                    "scale": {
                        "type": "linear",
                        "scheme": "reds"
                    },
                    "legend": {
                        "title": "Net Change"
                    }
                },
                "tooltip": [
                    { "field": "State", "type": "nominal", "title": "State " },
                    { "field": "NumberOfBirth", "type": "quantitative", "title": "Number of Birth ", "format": ",.0f" },
                    { "field": "NumberOfDeath", "type": "quantitative", "title": "Number of Death ", "format": ",.0f" },
                    { "field": "NetChange", "type": "quantitative", "title": "Net Change ", "format": ",.0f" }
                ]
            }
        }
    ]
}
