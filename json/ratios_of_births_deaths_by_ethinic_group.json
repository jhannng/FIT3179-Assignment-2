{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 375,
    "height": 390,
    "params": [
        {
            "name": "YearFilter",
            "value": 2022,
            "bind": {
                "input": "range",
                "min": 2012,
                "max": 2022,
                "step": 1,
                "name": "Year Selection: "
            }
        }
    ],
    "data": {
        "url": "../data/ratios_of_births_deaths_by_ethinic_group.csv"
    },
    "transform": [
        { "filter": "datum.Year == YearFilter" },
        {
            "aggregate": [
                {
                    "op": "sum",
                    "field": "NumberOfPeople",
                    "as": "TotalPeople"
                }
            ],
            "groupby": [ "Ethnicity", "Category", "Year" ]
        }
    ],
    "mark": "bar",
    "encoding": {
        "x": {
            "field": "Ethnicity",
            "type": "nominal",
            "axis": {
                "labelAngle": -45,
                "titlePadding": 10
            }
        },
        "y": {
            "field": "TotalPeople",
            "type": "quantitative",
            "title": "Number of People",
            "axis": {
                "titlePadding": 10
            }
        },
        "color": {
            "field": "Ethnicity",
            "type": "nominal"
        },
        "column": {
            "field": "Category",
            "type": "nominal"
        },
        "tooltip": [
            { "field": "Year", "type": "quantitative", "title": "Year" },
            { "field": "TotalPeople", "type": "quantitative", "title": "Total Number of People", "format": ",.0f" }
        ]
    }
}